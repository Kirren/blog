.main
  margin-left 18%
  min-height 100vh

// posts panel
.main-topbar
  background-color desaturate(lighten($admin-color-secondary, 7%), 7%)
  margin-left 1%
  box-shadow inset 0 -1px 0 desaturate(lighten($admin-color-secondary, 5%), 5%)

.main-topbar__form
  display inline-block

.main-topbar__button
  background-color transparent
  border none
  color #fff
  text-align center
  padding 15px
  display inline-block
  cursor pointer
  &:hover
    background-color desaturate(lighten($admin-color-secondary, 9%), 9%)

.main-menu
  margin-left 1%
  border-collapse collapse

.main-menu-item
  background-color desaturate(lighten($admin-color-secondary, 7%), 7%)

.main-menu-item__date
.main-menu-item__edit
.main-menu-item__title
  padding 15px
  &:hover
    background-color desaturate(lighten($admin-color-secondary, 9%), 9%)

.main-menu-item__date
  text-align center
  width 10%

.main-menu-item__title
  width 60%

.main-menu-item__edit
  cursor pointer
  text-align center
  width 10%

.modal-editpost
  z-index 999
  position fixed
  top 10%
  left 10%
  right 10%
  bottom 10%
  background-color $admin-color-secondary
  border 1px solid darken($admin-color-secondary, 10%)
  box-shadow 0 0 40px rgba(black, .3)
  &::after
    position fixed
    content ''
    top 0
    right 0
    bottom 0
    left 0
    background-color rgba(black, .0)
    z-index -10

.modal-editpost__exit
  position absolute
  top 2%
  right 2%
  font-size 15px
  color lighten($admin-color-secondary, 50%)
  letter-spacing 2px
  cursor pointer
