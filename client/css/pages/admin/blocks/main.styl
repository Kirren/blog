.main
  margin-left 18%
  min-height 100vh

// posts panel
.main-topbar
  background-color desaturate(lighten($admin-color-secondary, 7%), 7%)
  margin-left 1%
  box-shadow inset 0 -1px 0 desaturate(lighten($admin-color-secondary, 5%), 5%)

.main-topbar__form
  display inline-block

.main-topbar__button
  background-color transparent
  border none
  color #fff
  text-align center
  padding 15px
  display inline-block
  cursor pointer
  &:hover
    background-color desaturate(lighten($admin-color-secondary, 9%), 9%)

.main-menu
  margin-left 1%
  border-collapse collapse

.main-menu-item
  background-color desaturate(lighten($admin-color-secondary, 7%), 7%)

.main-menu-item__date
.main-menu-item__edit
.main-menu-item__title
  padding 15px
  &:hover
    background-color desaturate(lighten($admin-color-secondary, 9%), 9%)

.main-menu-item__date
  text-align center
  width 10%

.main-menu-item__title
  width 60%

.main-menu-item__edit
  cursor pointer
  text-align center
  width 10%
