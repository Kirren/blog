.sidebar
  position fixed
  width 18%
  height 100%
  background-color desaturate(lighten($admin-color-secondary, 7%), 7%)

.sidebar__title
  font-family 'Open Sans Bold'
  letter-spacing 2px
  text-transform uppercase
  padding 10% 0
  text-align center

.menu__button
  user-select none
  position relative
  color #fff
  text-decoration none
  display block
  padding 15px 15px 15px 50px
  transition all .2s ease
  &:link
  &:visited
    color #fff
  &:hover
    background-color $admin-color-secondary

.menu__button_active
  background-color $admin-color-secondary
  box-shadow inset 0 2px 0 desaturate(darken($admin-color-secondary, 15%), 15%)
  & span::after
    position absolute
    content ''
    top 50%
    right -15px
    transform translateY(-25%)
    width 6px
    height 6px
    border-radius 50%
    background-color #27b5ff

.menu__button:hover + .menu__button_active
  box-shadow none

.menu__button span
  position relative

.menu__button span::after
  position absolute
  content ''
  width 6px
  height 6px
  transition all .2s ease
  top 50%
  right -15px
  transform translateY(-25%)
  border-radius 50%
  background-color rgba(#fff, .0)

.menu__button_active span::after
  background-color #27b5ff

.menu__button:hover span::after
  background-color #27b5ff

.sidebar__logout
  user-select none
  background-color lighten($admin-color-secondary, 3%)
  display block
  width 100%
  text-align center
  position absolute
  bottom 0
  padding 25px 0
  text-decoration none
  text-transform uppercase
  font-size 13px
  transition all .2s ease
  &:link
  &:visited
    color desaturate(lighten($admin-color-secondary, 25%), 25%)
  &:hover
    background-color darken($admin-color-secondary, 3.5%)
