body
  background-color $color-bg

.post-body__title span
  margin-top 25px
  display block
  font-size 17px
  font-family 'Open Sans Light'
  line-height 1.7
  font-weight normal

.post-archive__title
  font-size 30px
  font-weight normal
  font-family 'Open Sans Regular'
  color #bbb

.post-archive__form
  display block

.post-archive__item
  text-transform uppercase
  padding-bottom 10px
  cursor pointer
  outline none
  box-shadow none
  border none
  background-color transparent
  display inline-block
  color $color-text
  font-size 18px
  transition all .2s ease
  &:hover
    color $color-text-active
